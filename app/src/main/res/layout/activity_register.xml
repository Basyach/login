<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".RegisterActivity" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar android:layout_height="wrap_content" android:layout_width="match_parent" android:theme="?attr/actionBarTheme" android:minHeight="?attr/actionBarSize" android:background="?attr/colorPrimary" android:id="@+id/toolbar"/>


    -<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    -<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="#000"
        android:text="Username"/>

    <EditText
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:id="@+id/editUsername"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textViewPassword"
        android:textSize="14sp"
        android:textColor="#000"
        android:text="Password"/>

    <EditText
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:id="@+id/editPassword"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="#000"
        android:text="Email"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:id="@+id/editEmail"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="#000"
        android:text="Nama Lengkap"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:id="@+id/editNamaLengkap"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="#000"
        android:text="Asal Sekolah"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:id="@+id/editAsalSekolah"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="#000"
        android:text="Alamat Tinggal"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/editAlamat"
        android:padding="5dp"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:singleLine="false"
        android:lines="3"
        android:gravity="top|left"/>

    <Button
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/btnSimpan"
        android:textSize="14sp"
        android:textColor="#000"
        android:text="Simpan"
        android:layout_marginTop="40dp"/>

</LinearLayout>

</ScrollView>

</LinearLayout>